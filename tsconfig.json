/* Reference: https://www.typescriptlang.org/docs/handbook/compiler-options.html */
{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["ES2018"],
    "target": "ES2018",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "types": ["node"]
  },
  "exclude": ["node_modules", "*.spec/**/*.spec.ts"],
  "include": ["src/**/*"]
}
